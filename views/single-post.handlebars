<article class="list-group-item">
  <div class="title">
    <a href="/post/{{post.id}}">{{post.title}}</a>
  </div>
  <div class="description">{{post.description}}</div>
  <div class="meta">
    {{post.vote_count}} vote(s) by {{post.user.username}} on {{post.created_at}}
    |
    {{post.comments.length}} comment(s)
  </div>
</article>
<br>
{{#if loggedIn}}
<form class="comment-form">
  <div>
    <textarea class="comment-text" name="comment-body"></textarea>
  </div>

  <div>
    <button type="submit" class="btn btn-primary">Add A Comment</button>
    <button type="button" class="btn btn-success upvote-btn">Upvote</button>
  </div>
</form>
{{/if}}

<div class="comments">
  {{#each post.comments}}
  <section class="comment">
    <div class="meta">
      {{user.username}} on {{created_at}}
    </div>
    <div class="text">
      {{comment_text}}
    </div>
  </section>
  {{/each}}
</div>
{{#if loggedIn}}
<script src="/javascript/comment.js"></script>
<script src="/javascript/upvote.js"></script>
{{/if}}